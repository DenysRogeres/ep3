<div class="box">
 <article class="media">
  <div class="media-left">
   <figure class="image is-64x64">
    <%= gravatar_image_tag(comentario.user.email, class: 'border-radius-50', size: 48, alt: comentario.user.username) %>
   </figure>
  </div>
  <div class="media-content">
    <div class="content">
     <p>
      <strong><%= comentario.user.username %></strong> <small><%= time_ago_in_word(comentario.created_at)%></small>
        <br/>
        <%= markdown(comentario.comentario) %>
    </p>
    </div>
    <% if comentario_author(comentario) || has_role?(:admin) %>
    <nav class="level is-mobile">
    <div class="level-left">
    <a class="level-item">
     <%= link_to edit_topico_comentario_path(comentario.topico, comentario) do %>
        <span class="icon is-small"><i class="fa fa-pencil"></i></span>
        <% end%>
    </a>
    <a class="level-item">
     <%= link_to [comentario.topico, comentario], 
          method: :delete, data: {confirm: "Tem certeza?"} do %>
        <span class="icon is-small"><i class="fa fa-trash-o"></i></span>
        <% end%>
    </a> 
    </div>
    </nav>
     <% end %>
    </div>
    </article>
</div>
 