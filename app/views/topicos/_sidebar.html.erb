<div class="column is-3 is-offset-1">
    <h3 class="title is-5 has-text-grey-light">Areas </h3>

    <ul class= "list">
        <% @areas.each do |c| %>
        <li><%= link_to c.area, c %></li>
        <% end %>
    </ul>

    <br/>

    <% if has_role?(:admin) %>
    <%= link_to 'Nova Area', new_area_path, class:'button is-info' %>
    <% end %>

</div>