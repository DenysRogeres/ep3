
<%= simple_form_for(@topico) do |f| %>
  <%= f.error_notification %>

    <div class= "field">
      <div class="control">
        <%= f.input :title, required:true, input_html: { class: 'input'}, wrapper: false, label_html: {class: "label"} %>
      </div>
  </div>

      <div class= "field">
      <div class="control">
        <%= f.input :content, required:true, input_html: { class: 'textarea'}, wrapper: false, label_html: {class: "label"} %>
      </div>
  </div>

  <div class ="field">
    <label class="label">Area</label>
    <div class="control has-icons-left">
      <span class="select">
        <%= f.input_field :area_id, collection: @areas.map {|c|[c.area, c.id]}, prompt: "Selecione a area"%>
        </span>
        <span class="icon is-small is-left">
        <i class="fa fa-tag"></i>
        </span>
  </div>
  </div>

  <div class="field">
    <div class= "control">
      <%= f.button :submit, class: "button is-info"%>
      </div>
      </div>
<% end %>
