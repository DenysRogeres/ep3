<h1 class="title is-2">Areas</h1>

<% if has_role?(:admin) %>
<div class="level">
 <div class="level-left"></div>
 <div class="level-right">
   <%= link_to 'Nova Area', new_area_path, class:'button is-dark' %>
 </div>
</div>

<table class="table is-fullwidth">
 <thead>
   <tr>
     <th>Area</th>
     <th colspan="3"></th>
   </tr>
 </thead>
 <tbody>
   <% @areas.each do |area| %>
   <tr>
     <td><%= link_to area.area, area %></td>
     <td>
       <div class="buttons is-right">
         <%= link_to 'Ver Area', area, class:'button' %>
         <%= link_to 'Editar Area', edit_area_path(area), class:'button' %>
         <%= link_to 'Deletar', area, class:'button is-danger', method: :delete, data: { confirm: "Você tem certeza que quer deletar essa área? " } %>
       </div>
     </td>
   </tr>
   <% end %>
 </tbody>

</table>

<% else %>
<p class="has-text-center">Você não tem acesso para essa página.</p>
<% end %>